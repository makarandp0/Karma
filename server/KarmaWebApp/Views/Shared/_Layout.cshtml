<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - KarmaWeb.com</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div id="fb-root"></div>
    <script>
    $(function () // same as: $( document ).ready(fucntion()
    {
        console.log("document ready for v1.2!");

        // to start with mark as not_authorized.
        UpdateUserLoggedOnState(null);

        // by default, jQuery timestamps asynchronous requests to avoid them being cached by the browser.
        // You’ll want to disable this functionality using the ajaxSetup() method,
        // so that the SDK is cached locally between pages.
        $.ajaxSetup({ cache: true });

        // load facebook sdk async
        $.getScript('//connect.facebook.net/en_US/all.js', function () {

            // when facebook sdk loaded, call init.
            FB.init({
                // appId: '225642707613078',
                appId: '@KarmaWebApp.Models.MainModel.AppKey',
                    channelUrl: '/Scripts/app/Channel.html', // TODO: fix root url.
                    status: true, // check login status
                    cookie: true, // enable cookies to allow the server to access the session
                    xfbml: false  // parse XFBML
                });

                // register for facebook logon state change.
                FB.Event.subscribe('auth.authResponseChange', function (response) {

                    console.log('auth.authResponseChange:' + response.status);
                    if (response.status === 'connected') {
                        GetLoggedOnUserInfo(response.authResponse)
                    }
                    else {
                        console.log('auth.authResponseChange:User cancelled login or did not fully authorize.');
                    }

                });

                // setup the logon button for users logs user on.
                // this will be enabled/disabled from UpdateUserLoggedOnState.
                $("#karma_logon_button").show().click(function () {
                    // no need to handle response here, its hanled in event registration above
                    FB.login(function (response) {}, { scope: 'email' });
                });
            });
        });

        //
        function GetLoggedOnUserInfo(authResponse)
        {
            // the user is logged in and has authenticated your
            // app, and response.authResponse supplies
            // the user's ID, a valid access token, a signed
            // request, and the time the access token
            // and signed request each expire
            FB.api('/me?fields=id,name,picture', function (fb_me_response) {
                var karma_userinfo =
                {
                    id: fb_me_response.id,
                    name: fb_me_response.name,
                    pictureurl: fb_me_response.picture.data.url,
                    uid: authResponse.userID,
                    accessToken: authResponse.accessToken
                }
                UpdateUserLoggedOnState(karma_userinfo);
            });
        }


        // Here we run a very simple test of the Graph API after login is successful.
        // This testAPI() function is only called in those cases.
        function UpdateUserLoggedOnState(karma_userinfo)
        {
            var loggedOn = true;
            if (karma_userinfo === null) {
                console.log('LogonState: Not Logged On');
                loggedOn = false;
            }

            if (loggedOn)
            {
                setupmobilelink();

                $("#karma_logoon_controls").hide();
                $("#karma_logoff_controls").show();
                $("#karma_user_img").attr("src", karma_userinfo.pictureurl).show();
                $("#karma_user_name").html("Hello " + karma_userinfo.name + "!")
                $("#karma_user_name").show().unbind("click").click(getFriends).prop('disabled', false).show();;
            }
            else
            {
                $("#karma_logoon_controls").show();
                $("#karma_logoff_controls").hide();
                $("#karma_user_name").show().unbind("click").prop('disabled', true);
            }
        }

        function getFriends() {
            FB.api('/me/friends', function (response) {
                if (response.data) {
                    $.each(response.data, function (index, friend) {
                        console.log(friend.name + ':' + friend.id);
                    });
                } else {
                    console.log('Error retriving friends list');
                }
            });
        }

        function setupmobilelink(accesstoken) {
            FB.getLoginStatus(function (response) {
                    var accessToken = response.authResponse.accessToken;
                    $("a#MobileLink").attr('href', '/Android/?accessToken=' + accessToken);
            });
        }
    </script>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">KarmaWeb.com</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/">Home</a></li>
                    <li><a id="MobileLink" href="/Android">Mobile</a></li>
                </ul>
                 
                <ul id="karma_logoff_controls"class="nav navbar-nav navbar-right">
                    <li><a id="karma_user_name" href="#">Hellow Unknown!</a></li>
                    <li>
                        <img id="karma_user_img" src="" alt="some_text">
                    </li>
                </ul>
                <ul id="karma_logoon_controls" class="nav navbar-nav navbar-right">
                    <li><a id="karma_logon_button" href="#">Log in</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - KarmaWeb.com</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
